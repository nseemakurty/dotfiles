# command line customization
PS1='\e[1;32m\]\w\$\[\e[0m\] '

# put bash in "vi" mode
set -o vi

# use vim as default editor
export EDITOR=vim

# editing this file should be easy
alias brc="vim ~/.bashrc.common; source ~/.bash_profile; echo 'sourced bash profile'"

# aliases
alias grep="grep -i"
alias ll="ls -la"
alias u="cd .."
