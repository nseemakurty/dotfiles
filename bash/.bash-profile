# command line customization
PS1='\e[1;32m\]\w\$\[\e[0m\] '

# put bash in "vi" mode
set -o vi

# editing this file should be easy
alias brc="vim ~/.bash-profile; source ~/.bash-profile; echo 'sourced bash-profile'"
alias brs="vim ~/.bash-profile.specific; source ~/.bash-profile.specific; echo 'sourced bash-profile.specific'"

# aliases
alias gd="git diff ^HEAD"
alias gs="git status"
alias ll="ls -la"
alias u="cd .."

# all environment specific personalizations should go in a separate file
if [[ -s ~/.bash-profile.specific ]]; then
	source ~/.bash-profile.specific
	echo 'sourced bash-profile.specific'
fi
